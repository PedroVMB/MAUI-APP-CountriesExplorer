<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    Title="Countries"
    x:Class="CountriesExplorer.App.Views.CountriesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:viewmodels="clr-namespace:CountriesExplorer.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <CollectionView
        ItemsSource="{Binding Countries}"
        SelectionChanged="OnCountrySelected"
        SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid ColumnDefinitions="60,*,Auto" Padding="10">
                    <Image
                        HeightRequest="30"
                        Source="{Binding Flags.Png}"
                        WidthRequest="50" />
                    <VerticalStackLayout Grid.Column="1" Padding="10,0">
                        <Label FontAttributes="Bold" Text="{Binding Name.Common}" />
                        <Label FontSize="Small" Text="{Binding Capital[0]}" />
                    </VerticalStackLayout>
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
